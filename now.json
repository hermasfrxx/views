{
  "regions": ["hnd1"],
  "public": false,
  "rewrites": [
    {
      "source": ".js",
      "destination": "/index.html"
    },
    {
      "source": "/svg",
      "destination": "/api/views"
    }
  ],
  "headers": [
    {
      "source": "/api/views",
      "headers" : [
        {
          "key" : "Content-Type",
          "value" : "image/svg+xml"
        },
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "env": {
    "AWS_ACCESS_ID": "@views-aws-access-id",
    "AWS_ACCESS_SECRET_KEY": "@views-aws-secret-key"
  }
}
